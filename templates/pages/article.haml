%article.post
  %header
    %h1= title
    %span.date= date
  
  %section.content
    = body
  
  - if @config[:disqus]
    %section.comments
      #disqus_thread
      %script{ :type => "text/javascript", :src => "http://disqus.com/forums/#{@config[:disqus]}/embed.js" }
      %noscript
        %p
          %a{ :href => "http://#{@config[:disqus]}.disqus.com/?url=ref" } View the discussion thread
      %p
        %a.dsq-brlink{ :href => "http://disqus.com" } Blog comments powered by <span class="logo-disqus">Disqus</span>
